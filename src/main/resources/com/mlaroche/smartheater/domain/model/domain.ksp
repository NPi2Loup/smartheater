}


create Domain DoBytes {
    dataType : Long
    storeType : "NUMERIC"
}

create Domain DoLabel {
	dataType : String
	storeType : "VARCHAR(100)"
}

create Domain DoText {
	dataType : String
	storeType : "TEXT"
}

create Domain DoBoolean {
	dataType : Boolean
	storeType : "BOOL"
}


