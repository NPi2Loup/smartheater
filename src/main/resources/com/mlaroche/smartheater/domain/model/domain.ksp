create Domain DoId {
	dataType : Long
	storeType : "NUMERIC"
}

create Domain DoDate {
	dataType : LocalDate
	storeType : "DATE"
}

create Domain DoDouble {
	dataType : Double
	storeType : "NUMERIC"
}

create Domain DoTimestamp {
	dataType : Instant
	storeType : "TIMESTAMP"
}


create Domain DoNumber {
	dataType : Integer
